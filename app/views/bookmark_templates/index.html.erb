<h1>
  My bookmarks
</h1>

<a href="/bookmarks/new">
  Add a new bookmark
</a>

<hr>

<table class="table">
  <tr>

    <th>
      Restaurant
    </th>

    <th>
      Notes
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @bookmarks.each do |bookmark| %>

<input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">
<input type="hidden" id="restaurant_id" name="restaurant_id" value="<%= bookmark.restaurant_id %>">

  <tr>

    <td>
      <a href="<%= @restaurant_id.name %>"><%= @restaurant_id.name %></a>
    </td>

    <td>
      <%= bookmark.notes %>
    </td>

    <td>
      <%= time_ago_in_words(bookmark.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(bookmark.updated_at) %> ago
    </td>

    <td>
      <a href="/bookmarks/<%= bookmark.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
