<h1>
  All restaurants
</h1>

<a href="/restaurants/new">
  Add a new restaurant
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Location
    </th>

    <th>
      Comments
    </th>

    <th>
      Website
    </th>

    <th>
      Bookmarks
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @restaurants.each do |restaurant| %>
  <tr>
    <td>
      <%= restaurant.id %>
    </td>

    <td>
      <%= restaurant.name %>
    </td>

    <td>
      <%= restaurant.location %>
    </td>

    <td>
      <%= restaurant.comments %>
    </td>

    <td>
      <%= restaurant.website %>
    </td>

    <td>
      <%= restaurant.bookmarks %>
    </td>

    <td>
      <%= time_ago_in_words(restaurant.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(restaurant.updated_at) %> ago
    </td>

    <td>
      <a href="/restaurants/<%= restaurant.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
