<!-- Validation failure messages -->
<% if @restaurant.errors.any? %>
  <% @restaurant.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit restaurant #<%= @restaurant.id %>
</h1>

<hr>

<form action="/update_restaurant/<%= @restaurant.id %>" method="post">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @restaurant.name %>">
  </div>

  <!-- Label and input for location -->
  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control" value="<%= @restaurant.location %>">
  </div>

  <!-- Label and input for comments -->
  <div class="form-group">
    <label for="comments">
      Comments
    </label>

    <input type="text" id="comments" name="comments" class="form-control" value="<%= @restaurant.comments %>">
  </div>

  <!-- Label and input for website -->
  <div class="form-group">
    <label for="website">
      Website
    </label>

    <input type="text" id="website" name="website" class="form-control" value="<%= @restaurant.website %>">
  </div>

  <!-- Label and input for likes -->
  <div class="form-group">
    <label for="likes">
      Likes
    </label>

    <input type="text" id="likes" name="likes" class="form-control" value="<%= @restaurant.likes %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update restaurant
  </button>
</form>

<hr>

<a href="/restaurants">
  Go back
</a>
